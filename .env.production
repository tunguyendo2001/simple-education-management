# Database Configuration
MYSQL_ROOT_PASSWORD=your-super-secure-root-password-here
MYSQL_DATABASE=education_db
MYSQL_USER=edu_user
MYSQL_PASSWORD=your-secure-password-here

# JWT Configuration - Use a strong secret key
JWT_SECRET=your-production-jwt-secret-key-minimum-256-bits-long-very-secure
JWT_EXPIRATION=28800000

# Spring Profiles
SPRING_PROFILES_ACTIVE=prod

# Logging Level
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_COM_EXAMPLE_STUDENTAPI=INFO

# File Upload
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# SSL Configuration (if using HTTPS)
SERVER_SSL_ENABLED=true
SERVER_SSL_KEY_STORE=/etc/ssl/keystore.p12
SERVER_SSL_KEY_STORE_PASSWORD=your-keystore-password

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=education-app-prod
